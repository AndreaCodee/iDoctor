

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Doctor Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link href="styles.css" rel="stylesheet">
    </head>

    <!-- Main Container -->
    <div class="container mt-4">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body text-center py-4">
                        <h1 class="display-6 text-primary mb-3">
                            <i class="fas fa-user-md me-3"></i>
                            <% const d=new Date(); const hour=d.getHours(); let greeting; if(hour < 12) {
                                greeting="Buongiorno Dottore" ; } else if(hour < 18) { greeting="Buonpomeriggio Dottore"
                                ; } else { greeting="Buonasera Dottore" ; } %>
                                <%= greeting %>


                        </h1>
                        <p class="lead text-muted">
                            <% if(locals.content) { %>
                                <i>"<%=content%>"</i>
                                <p>
                                    <%=author%>
                                </p>
                                <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Functionality Categories -->
        <div class="row g-4 mb-5" id="categories-section">
            <div class="col-md-6">
                <div class="card h-100 shadow-sm functionality-card" onclick="loadPatients()">
                    <div class="card-body d-flex flex-column align-items-center text-center p-4">
                        <div class="icon-container mb-3">
                            <i class="fas fa-users fa-4x text-primary"></i>
                        </div>
                        <h3 class="card-title text-primary mb-3">Gestione Pazienti</h3>
                        <p class="card-text text-muted mb-4">
                            Visualizzazione, modifica e aggiunta pazienti.
                        </p>
                        <form action="/patients" method="get">
                            <input class="btn btn-primary btn-lg mt-auto" type="submit" name="viewPatients"
                                value="Gestisci Fatture" id="tab">

                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm functionality-card">
                    <div class="card-body d-flex flex-column align-items-center text-center p-4">
                        <div class="icon-container mb-3">
                            <i class="fas fa-file-invoice-dollar fa-4x text-success"></i>
                        </div>
                        <h3 class="card-title text-success mb-3">Fatture</h3>
                        <p class="card-text text-muted mb-4">
                            Visualizza, aggiungi, stampa e esporta le fatture.
                        </p>
                        <form action="/invoices" method="get">
                            <input class="btn btn-success btn-lg mt-auto" type="submit" name="viewInvoices"
                                value="Gestisci Fatture" id="tab">

                        </form>
                    </div>
                </div>
            </div>
        </div>




